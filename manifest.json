{
    "manifest_version": 3,
    "name": "Quickfill para Citonova",
    "version": "1.0.1",
    "description": "Pega filas de forma r√°pida de Google Sheets hacia el enrolamiento de Citonova. Desarrollado por Eliam Villegas.",
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardRead"
    ],
    "host_permissions": [
        "https://www.app.citonova.cl/*"
    ],
    "action": {
        "default_title": "Quickfill para Citonova",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.app.citonova.cl/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
